                        android:editable="false"
                        android:ems="10"
                        android:focusable="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="textPersonName"
                        android:padding="2dp"
                        android:textColor="#050505"
                        android:textSize="14sp"
