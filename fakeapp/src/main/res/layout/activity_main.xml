<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    tools:context=".MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_for_round"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="20dp"
                    android:maxHeight="4dp"
                    android:outlineAmbientShadowColor="#000000"
                    android:progressDrawable="@drawable/shape_for_seek_progress"
                    android:scrollbarSize="30dp"
                    android:thumb="@drawable/shape_for_seek_thumb" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="As needed move the Back Button above up or down the scale to rate your well-being then click save below"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@drawable/shape_for_round"
                    android:text="WellBeing Activity this Week"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_for_round"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/step_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_weight="0.4"
                                android:src="@drawable/step" />

                            <TextView
                                android:id="@+id/step_title"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:gravity="center|center_horizontal"
                                android:text="Steps"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/step_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:autofillHints="0"
                            android:enabled="true"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:hint="0"
                            android:numeric="integer"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/call_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_weight="0.4"
                                android:src="@drawable/phone" />

                            <TextView
                                android:id="@+id/call_title"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:gravity="center|center_horizontal"
                                android:text="Calls "
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/call_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:autofillHints="0"
                            android:enabled="true"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:hint="0"
                            android:numeric="integer"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/text_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_weight="0.4"
                                android:src="@drawable/chat" />

                            <TextView
                                android:id="@+id/text_title"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:gravity="center|center_horizontal"
                                android:text="Texts "
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:autofillHints="0"
                            android:enabled="true"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:hint="0"
                            android:numeric="integer"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Submit" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>